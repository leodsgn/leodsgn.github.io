$headerHeight = 60px
$logoSize = 18px
$logoPadding = ($headerHeight - $logoSize)/2
$socialSize = 20px
$socialPadding = ($headerHeight - $socialSize)/2

.header
  display: block
  width: 100%
  height:$headerHeight
  //background-color #efefef

  .logo
    padding: $logoPadding 0
    font-size: $logoSize
    font-weight: bold
    a
      color: #000000
      text-decoration: none

  .menu
    .social-item
      display: inline-block
      font-size: $socialSize
      padding: $socialPadding ($socialPadding/2)

      &:nth-last-child(1)
        padding-right: 0


      a
        color: #000000
        text-decoration none
        transition: all .3s ease-in-out

        &:hover
          color: lighten(#000000, 40%)